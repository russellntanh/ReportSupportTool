<Window x:Class="ReportSupportTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReportSupportTool"
        xmlns:vm="clr-namespace:ReportSupportTool.ViewModels"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Weekly Report Tool" Height="600" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Blue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontStyle" Value="Normal"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="3" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Open file-->
        <Grid Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="File Name:" VerticalAlignment="Center"/>
                <TextBox x:Name="ReportNameTextBox" Width="625" Margin="5,0,5,0" Height="25"/>
                <Button x:Name="Load" Content="Load" Width="80" Style="{StaticResource ButtonStyle}"
                            Command="{Binding LoadDataCommand}" />
            </StackPanel>
        </Grid>

        <!--Grid of loaded data-->
        <GroupBox Grid.Row="1" Header="Loaded Issues" Padding="10">
            <DataGrid ItemsSource="{Binding IssuesCollection}" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="All"
                      AlternatingRowBackground="#FFF5F5F5"
                      RowHeaderWidth="0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Assignee" Binding="{Binding Assignee}" Width="180"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Summary" Binding="{Binding Summary}" Width="350"/>
                    <DataGridTextColumn Header="Sprint" Binding="{Binding Sprint}"  Width="150"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding IssueType}"  Width="100"/>
                    <DataGridTextColumn Header="Story Point" Binding="{Binding StoryPoints}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!--Groupped data by each member-->
        <GroupBox Header="Grouped data by each member" Grid.Row="2" Padding="10">
            <DataGrid ItemsSource="{Binding MemberStatusCollection}"
                      GridLinesVisibility="All"
                      AlternatingRowBackground="#FFF5F5F5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Assignee" Binding="{Binding MemberName}" Width="180"/>
                    <DataGridTextColumn Header="Holding" Binding="{Binding HoldingCount}" Width="100"/>
                    <DataGridTextColumn Header="To Do" Binding="{Binding ToDoCount}" Width="100"/>
                    <DataGridTextColumn Header="In Progress" Binding="{Binding InProgressCount}" Width="100"/>
                    <DataGridTextColumn Header="Done" Binding="{Binding DoneCount}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!--Show chart statistics-->
        <GroupBox Header="Issue Status by Member" Grid.Row="3" Padding="15">
            <lvc:CartesianChart Series="{Binding SeriesCollection}" 
                            LegendLocation="Right" Height="157">

                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Quý" Labels="{Binding Labels}"/>
                </lvc:CartesianChart.AxisX>

                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Doanh số (Triệu VNĐ)" 
                          LabelFormatter="{Binding YFormatter}"/>
                </lvc:CartesianChart.AxisY>

            </lvc:CartesianChart>
        </GroupBox>
    </Grid>
</Window>
