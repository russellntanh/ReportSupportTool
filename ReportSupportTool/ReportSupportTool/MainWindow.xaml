<Window x:Class="ReportSupportTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReportSupportTool"
        xmlns:vm="clr-namespace:ReportSupportTool.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Open file-->
        <Grid Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="File Name:" VerticalAlignment="Center"/>
                <TextBox x:Name="ReportNameTextBox" Width="625" Margin="5,0,5,0" Height="25"/>
                <Button x:Name="Load" Content="Load" Width="80"
                            Command="{Binding LoadDataCommand}" />
            </StackPanel>
        </Grid>

        <!--Grid of loaded data-->
        <GroupBox Grid.Row="1" Header="Loaded Issues" Padding="10">
            <DataGrid ItemsSource="{Binding IssuesCollection}" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="All"
                      AlternatingRowBackground="#FFF5F5F5"
                      RowHeaderWidth="0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Assignee" 
                                        Binding="{Binding Assignee}" 
                                        Width="180"/>
                    <DataGridTextColumn Header="Status" 
                                        Binding="{Binding Status}" 
                                        Width="100"/>
                    <DataGridTextColumn Header="Summary" 
                                        Binding="{Binding Summary}" 
                                        Width="350"/>
                    <DataGridTextColumn Header="Sprint" 
                                        Binding="{Binding Sprint}" 
                                        Width="150"/>
                    <DataGridTextColumn Header="Type" 
                                        Binding="{Binding IssueType}" 
                                        Width="100"/>
                    <DataGridTextColumn Header="Story Point"
                                        Binding="{Binding StoryPoints}"
                                        Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!--Show chart statistics-->
        <Grid Grid.Row="2">
            
        </Grid>
    </Grid>
</Window>
